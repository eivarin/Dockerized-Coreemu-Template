#!/bin/sh
if [[ "$OSTYPE" == "darwin"* ]]; then
  open -a XQuartz
  xhost +local:root > /dev/null
  export DISPLAY_BIND=$(echo $DISPLAY | sed -E "s/[^/]+:[[:digit:]]$//"):/tmp/display:rw
  export DISPLAY="/tmp/display/org.xquartz:0"
fi
# docker-compose up -d & sleep 4 ; docker exec -it core core-gui
docker-compose up